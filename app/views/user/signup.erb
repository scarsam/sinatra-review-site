<% if flash.has?(:message) %>
    <strong><%= flash[:message] %></strong>
<% end %>

<form action="/signup" method="POST">
  <div class="row flex align-bottom">
    <div class="three columns">
      <label for="name">Your name</label>
      <input class="u-full-width" name="user[name]" type="text" id="name">
    </div>
    <div class="three columns">
      <label for="email">Your email</label>
      <input class="u-full-width" name="user[email]" type="text" id="email">
    </div>
    <div class="three columns">
      <label for="password">Your password</label>
      <input class="u-full-width" name="user[password]" type="password" id="password">
    </div>
    <div class="three columns">
      <input class="button-primary" type="submit" value="Log in">
    </div>
  </div>
</form>